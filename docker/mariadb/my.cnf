[mariadb]
# -------- Network & Auth --------
bind-address            = 0.0.0.0
skip-name-resolve       = 1
default_time_zone       = '+00:00'

# -------- Character Set --------
character-set-server    = utf8mb4
collation-server        = utf8mb4_unicode_ci

# -------- Memory & InnoDB --------
innodb_buffer_pool_size         = 512M      # 50-70 % of RAM on dedicated boxes
innodb_buffer_pool_instances    = 4
innodb_log_file_size            = 128M
innodb_log_buffer_size          = 32M
innodb_flush_log_at_trx_commit  = 2         # balance speed vs durability
innodb_file_per_table           = 1
innodb_open_files               = 2000

# -------- Connections --------
max_connections         = 200
max_user_connections    = 190
wait_timeout            = 300
interactive_timeout     = 300

# -------- Query Cache (use judiciously) --------
query_cache_type        = 0        # OFF for write-heavy workloads
query_cache_size        = 0

# -------- Temp tables --------
tmp_table_size          = 64M
max_heap_table_size     = 64M

# -------- Logging --------
slow_query_log          = 1
slow_query_log_file     = /var/log/mysql/slow.log
long_query_time         = 1.0
log_queries_not_using_indexes = 1